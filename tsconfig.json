{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "inlineSources": false,
    "noUnusedLocals": false,
    "declaration": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "types": [],
    "lib": [
        "es5",
        "dom",
        "es2015.collection"
    ]
  },
  "include": ["src/**/*.ts", "src/server.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
